<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#ff3b000b"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.comeOn.benkandov.probabilitycalculator.findIntersectionActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff"
        android:text="Please provide one of two options..."
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:text="P(A), P(B), and P(A &#8746;  B)"
        android:id="@+id/findUnionOption1"

        android:onClick="findIntersectionOption1"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="findIntersectionOption2"
        android:background="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:text="P(A) and P(B|A)"
        android:id="@+id/findUnionOption2"
        android:layout_below="@+id/findUnionOption1"
        android:layout_marginTop="94dp"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        android:textAlignment="gravity"
        android:gravity="center"
        android:background="#9301040e"
        android:onClick="firstPage"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:textColor="#ffffffff"
        android:text="RETURN"
        android:id="@+id/findUnionBack"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
