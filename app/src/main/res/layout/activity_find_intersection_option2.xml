<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#ff3b000b"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.comeOn.benkandov.probabilitycalculator.findIntersectionOption2Activity">
    <Button

        android:background="#9301040e"
        android:onClick="firstPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:text="return"
        android:id="@+id/findSingleBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please provide two decimal values..."
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textAlignment="gravity"
        android:gravity="center"
        android:background="#ff0a121d"
        android:textColor="#ffffffff"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="P(A)"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:textAlignment="gravity"
        android:gravity="center"
        android:background="#ff0a121d"
        android:textColor="#ffffffff"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="P(B|A)"
        android:id="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6" />

    <EditText
        android:textAlignment="gravity"
        android:gravity="center"
        android:background="#9301040e"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/Option1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_above="@+id/textView7" />

    <EditText
        android:textAlignment="gravity"
        android:gravity="center"
        android:background="#9301040e"
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/UnionOption2PAB"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView6" />

    <Button
        android:textAlignment="gravity"
        android:gravity="center"
        android:background="#ff0a121d"
        android:textColor="#ffffffff"
        android:layout_width="98dp"
        android:layout_height="50dp"
        android:text="Get P(A &#8745; B)"
        android:id="@+id/getResult"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/UnionOption2PAB"
        android:layout_alignEnd="@+id/UnionOption2PAB"
        android:onClick="getResult"
        />

    <TextView
        android:textAlignment="gravity"
        android:gravity="center"
        android:background="#9301040e"
        android:textColor="#ffffffff"
        android:layout_width="98dp"
        android:layout_height="50dp"

        android:id="@+id/result"
        android:layout_below="@+id/getResult"
        android:layout_alignRight="@+id/getResult"
        android:layout_alignEnd="@+id/getResult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
