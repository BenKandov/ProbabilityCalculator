<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ff3b000b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.comeOn.benkandov.probabilitycalculator.findSingleActivity"
    android:id="@+id/what">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff"
        android:text="Please provide one of three options..."
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="findSingleOption1"
        android:background="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:text="P(A&apos;) "
        android:id="@+id/findSingleOption1"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:text="P(B), P(A &#8746; B), and P(A &#8745; B)"
        android:id="@+id/findUnionOption1"

        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/findSingleOption1"
        android:layout_alignEnd="@+id/findSingleOption1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="findSingleOption2"
        />

    <Button
        android:onClick="findSingleOption3"
        android:background="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:text="P(A|B) and P(A &#8745; B)"
        android:id="@+id/findSingleOption3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="81dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        android:textAlignment="gravity"
        android:gravity="center"
        android:background="#9301040e"
        android:onClick="firstPage"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:textColor="#ffffffff"
        android:text="RETURN"
        android:id="@+id/findSingleBack"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
