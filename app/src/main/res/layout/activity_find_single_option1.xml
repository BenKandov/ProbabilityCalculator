<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff3b000b"
    tools:context="com.comeOn.benkandov.probabilitycalculator.findSingleOption1Activity"
    android:id="@+id/what">

    <TextView
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please provide decimal P(A&apos;)..."
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button

        android:background="#9301040e"
        android:onClick="firstPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:text="return"
        android:id="@+id/findSingleBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:textAlignment="gravity"
        android:gravity="center"
        android:background="#9301040e"
        android:textColor="#ffffffff"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/findSingleOption1Input"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        />

    <TextView
        android:textAlignment="gravity"
        android:gravity="center"
        android:background="#9301040e"
        android:textColor="#ffffffff"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/findSingleOption1Result"


        android:layout_centerHorizontal="true"
        android:layout_below="@+id/findIt" />

    <Button
        android:background="#ff0a121d"
        android:textColor="#ffffffff"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="Get P(A)"
        android:id="@+id/findIt"
        android:onClick="getResult"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
